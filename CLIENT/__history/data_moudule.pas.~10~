unit data_moudule;

interface

uses
  System.SysUtils, System.Classes, Data.DB, IBX.IBCustomDataSet, IBX.IBTable,
  IBX.IBDatabase, IBX.IBStoredProc;

type
  Tdm = class(TDataModule)
    my_database: TIBDatabase;
    IBTransaction1: TIBTransaction;
    TProvider: TIBTable;
    TProduct: TIBTable;
    spAddProvider: TIBStoredProc;
    spDeleteProvider: TIBStoredProc;
    spEditProvider: TIBStoredProc;
  private
    { Private declarations }
  public
    { Public declarations }
    procedure update_all;
  end;

var
  dm: Tdm;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}
{$R *.dfm}
procedure Tdm.update_all;
begin
  DM.TProvider.Close;
  DM.TProduct.Close;

  DM.TProvider.Open;
  DM.TProduct.Open;
end;

procedure Tdm.DataModuleCreate(Sender: TObject);
begin
    my_database.Open;
end;
end.
